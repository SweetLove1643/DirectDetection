<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Controller.ChooseRoleActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_role_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Radio Group cho vai trò -->
    <RadioGroup
        android:id="@+id/role_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/role_user"
            android:textSize="18sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/role_relative"
            android:textSize="18sp" />
    </RadioGroup>

    <!-- Trường nhập email người thân -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/relative_email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/role_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:hint="@string/relative_email_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/relative_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút xác nhận -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/relative_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>